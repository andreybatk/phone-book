@model Microsoft.AspNetCore.Identity.IdentityUser;
@{
    ViewData["Title"] = "Удалить пользователя";
}

<h2>Пользователь @Model.Id</h2>

<table class="table" border="2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя пользователя</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.UserName</td>
            <td>@Model.Email</td>
        </tr>
    </tbody>
</table>

<form method="post" action="~/Admin/Delete">
    <input type="hidden" name="user" value="@Model" />
    <input type="submit" value="Удалить" class="btn btn-sm btn-danger" />
</form>