@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>;
@{
    ViewData["Title"] = "Редактировать пользователей";
}

<h2>Пользователи</h2>

<h4>
    <a class="btn btn-sm btn-secondary" asp-action="Create">Добавить пользователя</a>
</h4>

<table class="table" border="2">
    <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Права доступа</a>
                    <a method="post" class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>