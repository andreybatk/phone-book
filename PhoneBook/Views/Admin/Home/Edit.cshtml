@model PhoneBook.DB.Models.Person
@{
    ViewData["Title"] = "Изменить контакт";
}

<h2>@ViewData["Title"] : @Model.ID</h2>

<form method="post" action="~/Home/Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="SecondName">Фамилия:</label><br />
        <input type="text" asp-for="SecondName" />
        <span asp-validation-for="SecondName"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Имя:</label><br />
        <input type="text" asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Отчество:</label><br />
        <input type="text" asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Адрес:</label><br />
        <input type="text" asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Телефон:</label><br />
        <input type="text" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание:</label><br />
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <br />

    <input class="btn btn-sm btn-primary" type="submit" value="Сохранить" />
</form>